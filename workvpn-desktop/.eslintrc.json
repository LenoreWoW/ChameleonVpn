{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "globals": {
    "THREE": "readonly",
    "gsap": "readonly",
    "ThreeScene": "readonly",
    "NodeJS": "readonly"
  },
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "no-console": "off",
    "prefer-const": "warn",
    "no-undef": "error"
  },
  "ignorePatterns": [
    "dist/**",
    "node_modules/**",
    "out/**"
  ]
}
