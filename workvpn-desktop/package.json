{
  "name": "barqnet-desktop",
  "version": "1.0.0",
  "description": "BarqNet Desktop Client for Windows and macOS",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp src/renderer/index.html dist/renderer/ && cp src/renderer/styles.css dist/renderer/",
    "watch": "tsc --watch",
    "start": "npm run build && electron-forge start",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "publish": "npm run build && electron-forge publish",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "npm run build && npm run test:integration",
    "test:integration": "echo 'Running integration tests...' && node test/integration.js"
  },
  "keywords": [
    "vpn",
    "openvpn",
    "electron"
  ],
  "author": "BarqNet Team",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "BarqNet",
        "executableName": "barqnet",
        "icon": "./assets/icon",
        "appBundleId": "com.barqnet.desktop",
        "appCategoryType": "public.app-category.utilities",
        "win32metadata": {
          "CompanyName": "BarqNet",
          "ProductName": "BarqNet Connect"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "BarqNet"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "format": "ULFO"
          }
        }
      ]
    }
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "keytar": "^7.9.0",
    "node-machine-id": "^1.1.12",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-dmg": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "electron": "^38.3.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  }
}
